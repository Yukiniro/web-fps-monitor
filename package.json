{
  "name": "fps-monitor",
  "version": "0.0.1",
  "description": "A browser plugin that monitors fps metrics",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Yukiniro/web-fps-monitor"
  },
  "scripts": {
    "build": "tsc --noEmit && vite build",
    "build:firefox": "tsc --noEmit && cross-env __FIREFOX__=true vite build",
    "build:watch": "cross-env __DEV__=true vite build -w --mode development",
    "build:firefox:watch": "cross-env __DEV__=true __FIREFOX__=true vite build -w --mode development",
    "build:hmr": "rollup --config utils/reload/rollup.config.ts",
    "wss": "node utils/reload/initReloadServer.js",
    "dev": "npm run build:hmr && (run-p wss build:watch)",
    "dev:firefox": "npm run build:hmr && (run-p wss build:firefox:watch)",
    "test": "jest"
  },
  "type": "module",
  "dependencies": {
    "construct-style-sheets-polyfill": "^3.1.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-fps": "^1.0.6"
  },
  "devDependencies": {
    "@rollup/plugin-typescript": "^11.1.5",
    "@testing-library/react": "13.4.0",
    "@twind/core": "^1.1.3",
    "@twind/preset-autoprefix": "^1.0.7",
    "@twind/preset-tailwind": "^1.1.4",
    "@types/chrome": "0.0.248",
    "@types/jest": "29.0.3",
    "@types/node": "20.8.3",
    "@types/react": "18.0.21",
    "@types/react-dom": "18.2.13",
    "@types/ws": "^8.5.4",
    "@typescript-eslint/eslint-plugin": "5.62.0",
    "@typescript-eslint/parser": "5.38.1",
    "@vitejs/plugin-react": "2.2.0",
    "chokidar": "^3.5.3",
    "cross-env": "^7.0.3",
    "eslint": "8.52.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "5.0.1",
    "eslint-plugin-react": "7.32.2",
    "fs-extra": "11.1.1",
    "jest": "29.0.3",
    "jest-environment-jsdom": "29.5.0",
    "npm-run-all": "^4.1.5",
    "prettier": "3.0.3",
    "rollup": "2.79.1",
    "sass": "1.69.3",
    "ts-jest": "29.1.1",
    "ts-loader": "9.5.0",
    "typescript": "4.9.5",
    "vite": "3.1.3",
    "ws": "8.13.0"
  }
}
